@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>我的 ASP.NET 应用程序</title>
    @*@styles.render("~/content/css")
      @scripts.render("~/bundles/modernizr")*@
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/echarts.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/myCharts.js")"></script>
    <!--Reference the autogenerated SignalR hub script. 注意一定别忘记写这句，signalr生成的脚本都在这-->
    <script src="~/signalr/hubs"></script>
</head>

<body style="background-color: #e8e8e8">
    <div id="banner" class="col-lg-12" style="background-color: #bdbab3; height: 300px"> </div>
    <div id="left_area" class="col-lg-2" ></div>
    <div id="content" class="col-lg-8" style="background-color: #f9f8fd; height: auto; margin-top: 60px;" >
        <div id="content1">
            <div id="machineTime" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">消费次数Top10 Echarts 图表</p>
        </div>
        <div id="content2">
            <div id="machineConsumption" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">消费金额Top10 Echarts 图表</p>
        </div>
        <div id="content3">
            <div id="stuConsumptions" style="width: 1200px; height: 800px;"></div>
            <p class="text-center"> 拟合函数为: y=2.77x+65.95</p>
            <p class="text-center">14级学生消费散点图 Echarts 图表 </p>
        </div>
        <div id="content4">
            <div id="facultyConsumption" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">14级各专业消费额度 Echarts 图表</p>
        </div>
        <div id="content5">
            <div id="stuConsumptionTime" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">Echarts 图表</p>
        </div>
        <div id="content6">
            <div id="facultyAbsenteeism" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">Echarts 图表</p>
        </div>
        <div id="content7">
            <div id="specialStuConsumption" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">Echarts 图表</p>
        </div>
        <div id="content8">
            <div id="specialStuConsumptionMechina" style="width: 1200px; height: 800px;"></div>
            <p class="text-center">Echarts 图表</p>
        </div>
        <div id="content9">
            <p class="text-center">Echarts 图表</p>
        </div>
        <div id="content10">
            <table class="table" id="tbList">
                <thead id=" tableHead">
                    <tr>
                        <th nowrap>姓名</th>
                        <th nowrap>学院</th>
                        <th nowrap>班级</th>
                        <th nowrap>时间</th>
                        <th nowrap>星期</th>
                        <th nowrap>节次</th>
                        <th nowrap>课程</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in ViewData["AbsenteeismTableData"] as List<GraduationProject.AbsenteeismModel>)
                    {
                        <tr>
                            <td>@a.studentName</td>
                            <td>@a.collageName</td>
                            <td>@a.className</td>                           
                            <td>@a.datetime</td>
                            <td>@a.week</td>
                            <td>@a.classNum</td>
                            <td>@a.classContent</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p class="text-center">Echarts 图表</p>
        </div>
    </div>
    <div id="right_area" class="col-lg-2" ></div>

    <script type="text/javascript">
        init()
    </script>
