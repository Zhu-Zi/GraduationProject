@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>数据分析报告页</title>
    @*@styles.render("~/content/css")
        @scripts.render("~/bundles/modernizr")*@
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/myStyle.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.2.js")"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.signalR-2.2.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/echarts.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/myCharts.js")"></script>
    <!--Reference the autogenerated SignalR hub script. 注意一定别忘记写这句，signalr生成的脚本都在这-->
    <script src="~/signalr/hubs"></script>
</head>

<body style="background-color: #e8e8e8">
    <div id="banner" class="col-lg-12" style="height: 400px">
        <div class="entry-banner">
            <p class="entry_banner_title">14级学生消费数据分析报告</p>
        </div> 
    </div>
    <div id="left_area" class="col-lg-2"></div>
    <div id="content" class="col-lg-8 middle_area">

        <div id="content0">
            <article class="hentry">
                <header>
                    <h1 class="entry-title"><strong>前言</strong></h1>
                </header>
                <div class="entry_content">
                    <p class="text-center">数据分析的报告等等等</p>
                </div>
            </article>
        </div>

        <div id="content1">
            <div id="machineTime" style="width: 1000px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[0]</strong></h2>
                </header>
                <div class="entry_content">
                    @Html.Raw(ViewBag.content[0])
                </div>
            </article>
        </div>
        <div id="content2">
            <div id="machineConsumption" style="width: 1000px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[1]</strong></h2>
                </header>
                <div class="entry_content">
                    @Html.Raw(ViewBag.content[1])
                </div>
            </article>
        </div>
        <div id="content3">
            <div id="stuConsumptions" style="width: 1000px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[2]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center"> 拟合函数为: y=2.77x+65.95</p>
                    @Html.Raw(ViewBag.content[2])
                </div>
            </article>
        </div>
        <div id="content4">
            <div id="facultyConsumption" style="width: 1100px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[3]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center">14级各专业消费额度 Echarts 图表</p>
                    @Html.Raw(ViewBag.content[3])
                </div>
            </article>
        </div>
        <div id="content5">
            <div id="stuConsumptionTime" style="width: 1100px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[4]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center">Echarts 图表</p>
                    @Html.Raw(ViewBag.content[4])
                </div>
            </article>
        </div>
        <div id="content6">
            <div id="facultyAbsenteeism" style="width: 1000px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[5]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center">Echarts 图表</p>
                    @Html.Raw(ViewBag.content[5])
                </div>
            </article>
        </div>
        <div id="content7">
            <div id="specialStuConsumption" style="width: 1100px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[6]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center">Echarts 图表</p>
                    @Html.Raw(ViewBag.content[6])
                </div>
            </article>
        </div>
        <div id="content8">
            <div id="specialStuConsumptionMechina" style="width: 1000px; height: 800px;"></div>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[7]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center">Echarts 图表</p>
                    @Html.Raw(ViewBag.content[7])
                </div>
            </article>
        </div>
        <div id="content9">
            <p class="text-center">Echarts 图表</p>
        </div>
        <div id="content10">
            <table class="table" id="tbList">
                <thead id=" tableHead">
                    <tr>
                        <th nowrap>姓名</th>
                        <th nowrap>学院</th>
                        <th nowrap>班级</th>
                        <th nowrap>时间</th>
                        <th nowrap>星期</th>
                        <th nowrap>节次</th>
                        <th nowrap>课程</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in ViewData["AbsenteeismTableData"] as List<GraduationProject.AbsenteeismModel>)
                    {
                        <tr>
                            <td>@a.studentName</td>
                            <td>@a.collageName</td>
                            <td>@a.className</td>
                            <td>@a.datetime</td>
                            <td>@a.week</td>
                            <td>@a.classNum</td>
                            <td>@a.classContent</td>
                        </tr>
                    }
                </tbody>
            </table>
            <article class="hentry">
                <header>
                    <h2 class="entry-title"><strong>@ViewBag.title[8]</strong></h2>
                </header>
                <div class="entry_content">
                    <p class="text-center">Echarts 图表</p>
                    @Html.Raw(ViewBag.content[8])
                </div>
            </article>
        </div>
    </div>
    <div id="right_area" class="col-lg-2"></div>

    <script type="text/javascript">
        init()
    </script>
