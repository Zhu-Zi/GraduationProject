@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>报告编辑页面</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/myStyle.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/ueditor/themes/iframe.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/ueditor/ueditor.config.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/ueditor/ueditor.all.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/ueditor/lang/zh-cn/zh-cn.js")"></script>
</head>
<body style="background-color: #e8e8e8">
    <div id="banner" class="col-lg-12" style="background-color:#bdbab3; height: 400px">
    </div>
    <div id="left_area" class="col-lg-2"></div>
    <div id="content" class="col-lg-8" style="background-color: #f9f8fd; height: auto; margin-top: 60px;">
        <div id="content1" style="margin-top:10px">
            <script type="text/javascript">
                var editor = new baidu.editor.ui.Editor({
                    UEDITOR_HOME_URL: '/Scripts/ueditor/',//配置编辑器路径
                    iframeCssUrl: '/Scripts/ueditor/themes/iframe.css',//样式路径
                    initialContent: '',//初始化编辑器内容
                    autoHeightEnabled: true,//高度自动增长
                    minFrameHeight: 500,//最小高度
                    autoFloatEnabled: true,
                    initialFrameWidth: 1000,

                    initialFrameHeight: 483
                });
                editor.render('editor');
            </script>
            @using (Html.BeginForm("Content", "Edit", FormMethod.Post))
            {
                <textarea id="editor" name="editor"></textarea>
                @*<div style="margin-top:5px">

                        <h1 class="col-lg-2 text-left" style="margin-top:2px;">
                            <small>选择图表</small>
                        </h1>

                            <select name="areaName" style="width:400px;height:35px;margin-top:6px">
                                <option>图表1</option>
                                <option>图表2</option>
                                <option>图表3</option>
                            </select>

                            <input type="submit" value="提交" class="btn" style="width:200px" />
                    </div>*@
                <div style="margin-top:20px">

                    <div class="control-group" style="margin-top:5px">
                        <label style="width:60px;text-align:right" for="SelectChart">选择图表</label>
                            <select name="areaName" style="height:35px;width:300px">
                                <option>图表1</option>
                                <option>图表2</option>
                                <option>图表3</option>
                                <option>图表4</option>
                                <option>图表5</option>
                                <option>图表6</option>
                                <option>图表7</option>
                                <option>图表8</option>
                                <option>图表9</option>
                            </select>
                    </div>

                    <div class="control-group" style="margin-top:5px">
                        <label style="width:60px;text-align:right" for="title">标题</label>

                        <input type="text" id="title" name="title" placeholder="标题" style="height:35px;width:300px">
                    </div>

                    <div class="control-group" style="margin-top:5px">
                        <label style="width:60px;text-align:right" for="title"></label>
                            <input type="submit" value="提价" class="btn" style="width:100px"/>
                    </div>

                </div>
            }
        </div>

        <div id="content2" style="height:50px"></div>
    </div>
    <div id="right_area" class="col-lg-2"></div>
</body>
</html>
